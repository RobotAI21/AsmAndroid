<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8F4">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo Khoản Chi Mới"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#317256"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edtExpenseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên khoản chi"
            android:inputType="text"
            android:background="@drawable/edittext_rounded_bg"
            android:padding="14dp"
            android:textColor="#1B4332"
            android:textColorHint="#757575"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtExpenseMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số tiền"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_rounded_bg"
            android:padding="14dp"
            android:textColor="#1B4332"
            android:textColorHint="#757575"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtBudgetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả chi tiết"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_rounded_bg"
            android:padding="14dp"
            android:textColor="#1B4332"
            android:textColorHint="#757575"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:textStyle="bold"
            android:textColor="#317256"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium" />

        <RadioGroup
            android:id="@+id/rgExpenseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thuê nhà"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/rbGroceries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua sắm"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/rbTransportation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Di chuyển"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/rbOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:textColor="#333333" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#D4AF37"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnBackExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#A67C00"
            android:padding="14dp" />
    </LinearLayout>
</ScrollView>
