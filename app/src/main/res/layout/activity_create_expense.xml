<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Expense"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/edtExpenseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter expense name"
            android:inputType="text"
            android:backgroundTint="#FFA726"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtExpenseMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            android:inputType="numberDecimal"
            android:backgroundTint="#FFA726"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtBudgetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:inputType="textMultiLine"
            android:backgroundTint="#FFA726"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category:"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/rgExpenseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠 Rent"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/rbGroceries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛒 Groceries"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/rbTransportation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚌 Transportation"
                android:textColor="#333333" />

            <RadioButton
                android:id="@+id/rbOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔧 Other"
                android:textColor="#333333" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#FB8C00"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnBackExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#FF7043"
            android:padding="14dp" />
    </LinearLayout>
</ScrollView>
